<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^(\d{17,18})/?$ /?id=$1 [L,QSA]

    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
</IfModule>

ErrorDocument 403 https://nilsbeerten.nl/403.html
ErrorDocument 404 https://nilsbeerten.nl/404.html
ErrorDocument 500 https://nilsbeerten.nl/500.html